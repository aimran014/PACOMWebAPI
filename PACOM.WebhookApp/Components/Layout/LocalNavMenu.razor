@implements IDisposable
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@using Microsoft.AspNetCore.Components.Authorization
@rendermode InteractiveServer

<MudNavMenu>

    <AuthorizeView>

        <NotAuthorized>

            <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">
                Home
            </MudNavLink>

            <MudNavLink Href="counter" Icon="@Icons.Material.Filled.Add">
                Counter
            </MudNavLink>

            <MudNavLink Href="weather" Icon="@Icons.Material.Filled.Cloud">
                Weather
            </MudNavLink>

            <MudNavLink Href="auth" Icon="@Icons.Material.Filled.Lock">
                Auth Required
            </MudNavLink>

            <MudNavLink Href="Account/Register" Icon="@Icons.Material.Filled.PersonAdd">
                Register
            </MudNavLink>

            <MudNavLink Href="Account/Login" Icon="@Icons.Material.Filled.Login">
                Login
            </MudNavLink>

        </NotAuthorized>

        <Authorized Context="auth">

            <MudNavGroup Title="@auth.User.Identity?.Name" Icon="@Icons.Material.Filled.AccountCircle" Expanded="false">
                <MudNavLink Href="#" Icon="@Icons.Material.Filled.Person" IconColor="Color.Primary">Profile</MudNavLink>
                <MudNavLink Href="#" Icon="@Icons.Material.Filled.Email" IconColor="Color.Success">Email</MudNavLink>
                <MudNavLink Href="#" Icon="@Icons.Material.Filled.Key" IconColor="Color.Info">Password</MudNavLink>
                <MudNavLink Href="#" Icon="@Icons.Material.Filled.VerifiedUser" IconColor="Color.Info">Two-Factor Authentication</MudNavLink>
                <MudNavLink Href="#" Icon="@Icons.Material.Filled.FolderShared" IconColor="Color.Info">Personal Data</MudNavLink>
            </MudNavGroup>

            <AuthorizeView Roles="Admin">
                <MudNavLink Href="Account/Users/Users" Icon="@Icons.Material.Filled.Group">
                    Users Manager
                </MudNavLink>
            </AuthorizeView>

            <MudNavLink Href="Account/Tenant/Tenants" Icon="@Icons.Material.Filled.Business">
                Tenants Manager
            </MudNavLink>

            <MudNavLink Href="#" Icon="@Icons.Material.Filled.Business">
                Events
            </MudNavLink>

            <AuthorizeView Roles="Admin">
                <MudNavGroup Title="Settings" Icon="@Icons.Material.Filled.Settings" Expanded="false">
                    <MudNavLink Href="#" Icon="@Icons.Material.Filled.Drafts" IconColor="Color.Success">Email</MudNavLink>
                    <MudNavLink Href="#" Icon="@Icons.Material.Filled.Security" IconColor="Color.Info">Security</MudNavLink>
                </MudNavGroup>
            </AuthorizeView>

            <MudSpacer/>
            <MudDivider Class="my-2" />

            <form action="Account/Logout" method="post">
                <AntiforgeryToken />
                <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                <button type="submit" class="nav-link">
                    <MudIcon Icon="@Icons.Material.Filled.Logout" Class="me-2" />Logout
                </button>
            </form>

        </Authorized>

    </AuthorizeView>
</MudNavMenu>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}