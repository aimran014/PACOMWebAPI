@using PACOM.WebhookApp.Components.Account.Shared
@using PACOM.WebhookApp.Components.Layout
<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly"
            AdditionalAssemblies="new[] { typeof(PACOM.WebhookApp.Components.Account.Pages.Login).Assembly }">
        <Found Context="routeData">
           <AuthorizeRouteView RouteData="routeData" DefaultLayout="@typeof(MainLayout)">
            <NotAuthorized>
                <RedirectToLogin />
            </NotAuthorized>
        </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(AuthLayout)">
                <div class="d-flex justify-center align-center" style="height:100vh">
                    <h3>Page Not Found</h3>
                </div>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>



