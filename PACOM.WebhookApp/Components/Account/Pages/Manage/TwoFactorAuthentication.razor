@page "/Account/Manage/TwoFactorAuthentication"
@layout PACOM.WebhookApp.Components.Layout.AccountLayout

@using Microsoft.AspNetCore.Http.Features
@using Microsoft.AspNetCore.Identity
@using PACOM.WebhookApp.Data

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@inject IdentityUserAccessor UserAccessor
@inject IdentityRedirectManager RedirectManager
@inject NavigationManager NavigationManager

<PageTitle>Two-factor authentication (2FA)</PageTitle>

<MudText Typo="Typo.h5" Class="mb-1">Two-Factor Authentication</MudText>
<MudText Typo="Typo.body2" Class="text-muted mb-6">Add an extra layer of security to your account.</MudText>
<MudDivider Class="mb-8" />

@* --- STATUS MESSAGE --- *@
@if (!string.IsNullOrEmpty(statusMessage))
{
    <MudAlert Severity="Severity.Success" Variant="Variant.Filled" Class="mb-6" ShowCloseIcon="true" CloseIconClicked="() => statusMessage = null">
        @statusMessage
    </MudAlert>
}

@if (canTrack)
{
    @if (is2faEnabled)
    {
        // --- SECTION 1: 2FA IS ACTIVE ---
        <div class="mb-8">
            <div class="d-flex align-center gap-2 mb-4">
                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" Size="Size.Large" />
                <MudText Typo="Typo.h6">2FA is currently <b>Enabled</b></MudText>
            </div>

            @* RECOVERY CODES WARNINGS *@
            @if (recoveryCodesLeft == 0)
            {
                <MudAlert Severity="Severity.Error" Variant="Variant.Outlined" Class="mb-4" Icon="@Icons.Material.Filled.Error">
                    <MudText><b>You have no recovery codes left.</b></MudText>
                    <MudText Typo="Typo.body2">You must generate a new set of recovery codes before you can log in with a recovery code.</MudText>
                    <MudButton Href="Account/Manage/GenerateRecoveryCodes" Variant="Variant.Filled" Color="Color.Error" Size="Size.Small" Class="mt-2">Generate new codes</MudButton>
                </MudAlert>
            }
            else if (recoveryCodesLeft == 1)
            {
                <MudAlert Severity="Severity.Error" Variant="Variant.Outlined" Class="mb-4" Icon="@Icons.Material.Filled.Warning">
                    <MudText><b>You have 1 recovery code left.</b></MudText>
                    <MudButton Href="Account/Manage/GenerateRecoveryCodes" Variant="Variant.Text" Color="Color.Error" Size="Size.Small">Generate new codes</MudButton>
                </MudAlert>
            }
            else if (recoveryCodesLeft <= 3)
            {
                <MudAlert Severity="Severity.Warning" Variant="Variant.Outlined" Class="mb-4">
                    <MudText><b>You have @recoveryCodesLeft recovery codes left.</b></MudText>
                    <MudButton Href="Account/Manage/GenerateRecoveryCodes" Variant="Variant.Text" Color="Color.Warning" Size="Size.Small">Generate new codes</MudButton>
                </MudAlert>
            }

            @* ACTION BUTTONS *@
            <div class="d-flex flex-wrap gap-4 mt-6">
                @if (isMachineRemembered)
                {
                    <form @formname="forget-browser" @onsubmit="OnSubmitForgetBrowserAsync" method="post">
                        <AntiforgeryToken />
                        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.DesktopAccessDisabled">
                            Forget this browser
                        </MudButton>
                    </form>
                }

                <MudButton Href="Account/Manage/Disable2fa" Variant="Variant.Outlined" Color="Color.Error" StartIcon="@Icons.Material.Filled.GppBad">
                    Disable 2FA
                </MudButton>

                <MudButton Href="Account/Manage/GenerateRecoveryCodes" Variant="Variant.Outlined" Color="Color.Secondary" StartIcon="@Icons.Material.Filled.Refresh">
                    Reset recovery codes
                </MudButton>
            </div>
        </div>
    }
    else
    {
        // --- SECTION 1: 2FA IS DISABLED ---
        <MudAlert Severity="Severity.Info" Variant="Variant.Outlined" Class="mb-8" Icon="@Icons.Material.Filled.Security">
            You do not have two-factor authentication enabled. Enabling it adds significant security to your account.
        </MudAlert>
    }

    <MudDivider Class="my-8" />

    // --- SECTION 2: AUTHENTICATOR APP CONFIG ---
    <MudText Typo="Typo.h6" Class="mb-4">Authenticator App</MudText>

    @if (!hasAuthenticator)
    {
        <MudButton Href="Account/Manage/EnableAuthenticator" Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.QrCodeScanner">
            Add authenticator app
        </MudButton>
    }
    else
    {
        <div class="d-flex gap-4">
            <MudButton Href="Account/Manage/EnableAuthenticator" Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Settings">
                Set up authenticator app
            </MudButton>

            <MudButton Href="Account/Manage/ResetAuthenticator" Variant="Variant.Outlined" Color="Color.Secondary" StartIcon="@Icons.Material.Filled.Restore">
                Reset authenticator app
            </MudButton>
        </div>
    }
}
else
{
    // --- SECTION 3: CONSENT REQUIRED ---
    <MudAlert Severity="Severity.Error" Variant="Variant.Filled" Icon="@Icons.Material.Filled.Cookie">
        <MudText><b>Privacy and cookie policy have not been accepted.</b></MudText>
        <MudText Typo="Typo.body2">You must accept the policy before you can enable two factor authentication.</MudText>
    </MudAlert>
}

@code {
    private bool canTrack;
    private bool hasAuthenticator;
    private int recoveryCodesLeft;
    private bool is2faEnabled;
    private bool isMachineRemembered;
    private string? statusMessage;

    [CascadingParameter]
    private HttpContext HttpContext { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        var user = await UserAccessor.GetRequiredUserAsync(HttpContext);
        canTrack = HttpContext.Features.Get<ITrackingConsentFeature>()?.CanTrack ?? true;
        hasAuthenticator = await UserManager.GetAuthenticatorKeyAsync(user) is not null;
        is2faEnabled = await UserManager.GetTwoFactorEnabledAsync(user);
        isMachineRemembered = await SignInManager.IsTwoFactorClientRememberedAsync(user);
        recoveryCodesLeft = await UserManager.CountRecoveryCodesAsync(user);

        // Check URL for status message
        var uri = NavigationManager.ToAbsoluteUri(NavigationManager.Uri);
        if (Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query).TryGetValue("statusMessage", out var msg))
        {
            statusMessage = msg;
        }
    }

    private async Task OnSubmitForgetBrowserAsync()
    {
        await SignInManager.ForgetTwoFactorClientAsync();

        RedirectManager.RedirectToCurrentPageWithStatus(
            "The current browser has been forgotten. When you login again from this browser you will be prompted for your 2fa code.",
            HttpContext);
    }
}